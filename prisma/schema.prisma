// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cliente {
  id String @id @unique @default(uuid())
  nome  String
  email String    @unique
  senha String   
  telefone  String

  @@map("cliente")
}

model Prato {
  id String @id @unique @default(uuid())
  nome  String @unique
  ingredientes String
  valor  Float
  
  @@map("prato")
}